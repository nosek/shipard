	</fo:block-container>

	<!-- B místo  -->
	<fo:block-container height="10mm" width="50mm" top="188mm" left="53mm" position="absolute" text-align="start" display-align="after">
		<fo:block>{{cfgItem.options.core.zusMistoVysvedceni}}</fo:block>
	</fo:block-container>


	<!-- A dne -->
	<fo:block-container height="10mm" width="67mm" top="190mm" left="101mm" position="absolute" display-align="after" border-bottom-style="dotted" padding-bottom="-1pt">
