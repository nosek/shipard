<div class="row">
	<main class="col-sm-12 ml-md-auto col-md-12" role="main">

		<div class="row">
			<form style="width: 100%;" action="{{data.urlBegin}}q">
				<div class="form-group" style="padding: 0.5rem 1rem; ">
					<input type="search" name="q" class="form-control" placeholder="Zadejte hledaný text a stiskněte ⏎..." autofocus value="{{data.page.queryText}}">
				</div>
			</form>
		</div>

		<div class="row">
			{{#data.sections}}
				{{#homeTile}}
				<div class="col-sm-4">
					<div class="card" style="min-width: 20rem; margin-bottom: 1rem;">
						<div class="card-body">
							<h4 class="card-title"><a href="{{url}}">{{#icon}}{{{@icon;dataItem:icon}}} {{/icon}}{{title}}</a>
							{{^mobileMode}}
								{{#buttons.0}}
								<div class="btn-group float-end">	
									<div class="dropdown">
										<button class="btn btn-link btn-xs" type="button" id="dropdownMenuButton-{{id}}" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding: .1rem 0; cursor: pointer;">
											<i class="fa fa-fw fa-ellipsis-v"></i>
										</button>
										<ul class="dropdown-menu dropdown-menu-right">
										{{#buttons}}
											<li>
											<a class="dropdown-item {{#actionClass}}{{actionClass}}{{/actionClass}}{{^actionClass}}e10-document-trigger{{/actionClass}}"{{#attr}} data-{{k}}="{{v}}"{{/attr}}>
												{{{@icon;dataItem:icon}}} {{text}}
											</a>
											</li>
										{{/buttons}}
										</ul>
									</div>
								</div>	
								{{/buttons.0}}
							{{/mobileMode}}
							</h4>
							<hr>
							<p class="card-text">
							{{#perex}}{{{perex}}}{{/perex}}
							{{#homeTileContent}}
							<ul class="e10-angle-list">
								{{#content2}}
									<li><a{{#docStateAlert}} class="e10-ds-block {{docStateClass}}"{{/docStateAlert}} href="{{url}}">{{title}}</a></li>
								{{/content2}}
							</ul>
							{{/homeTileContent}}
							</p>
						</div>
					</div>
				</div>	
				{{/homeTile}}
			{{/data.sections}}
		</div>

		<div class="text-center pb-5 pt-3 d-none d-md-block">
			{{#data.page.buttons}}
				<button class="e10-document-trigger btn btn-primary btn-sm"{{#attr}} data-{{k}}="{{v}}"{{/attr}} title="{{text}}">
					{{{@icon;dataItem:icon}}} {{text}}
				</button>
			{{/data.page.buttons}}
		</div>

	</main>
</div>
