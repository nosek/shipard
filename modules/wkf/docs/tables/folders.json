    {"id": "shortName", "name": "Zkrácený název", "type": "string", "len": 60},

    {"id": "order", "name": "Pořadí", "type": "int"},
    {"id": "icon", "name": "Ikona", "type": "string", "len": 50},

    {"id": "shipardEmailId", "name": "ID pro došlé emaily Shipard", "type": "string", "len": 48},

