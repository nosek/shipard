<style>
	table.header {
		font-family: Arial, Helvetica, sans-serif;
		font-size: 12pt;
		width: 100%;
		margin-left: 1cm;
		margin-right: 1cm;
		font-weight: bold;
		border-bottom: 1pt solid #000000;
	}

	td.docName {
		text-align: left;
	}

	td.docNumber {
		text-align: right;
	}
</style>

<table class='header'>
	<tr>
		<td class='docName' colspan="2">
			{{#data.head.taxPayer}}
				{{#data.head.correctiveDoc}}
					{{@dict;Opravný daňový doklad}}
				{{/data.head.correctiveDoc}}
				{{^data.head.correctiveDoc}}
					{{@dict;Faktura - daňový doklad}}
				{{/data.head.correctiveDoc}}
			{{/data.head.taxPayer}}
			{{^data.head.taxPayer}}
				{{#data.head.correctiveDoc}}
					Dobropis - neplátce DPH
				{{/data.head.correctiveDoc}}
				{{^data.head.correctiveDoc}}
					{{@dict;Faktura - neplátce DPH}}
				{{/data.head.correctiveDoc}}
			{{/data.head.taxPayer}}
		</td>
		<td class='docNumber'>
			{{@dict;Ev. číslo}}: {{data.head.docNumber}}
		</td>
	</tr>
</table>
