<style>
	table.footer{
		font-family: Arial, Helvetica, sans-serif;
		font-size: 6pt;
		width: 100%;
		margin-left: 1cm;
		margin-right: 1cm;
		border-collapse: collapse;
	}

	td.ownerInfo {text-align: left; line-height: 1.5;}
	td.logo {width: 33.3%; text-align: left;}
	td.author {width: 33.3%; text-align: right;}
	td.page {text-align: center; width: 33.3%;}
	img.logo {height: 1.30em;  position: relative;}
</style>

<table class='footer'>
	<tr>
		<td class="ownerInfo" colspan="3">
			{{#data.reportTexts.contactsFooter}}{{{data.reportTexts.contactsFooter}}}{{/data.reportTexts.contactsFooter}}
			{{^data.reportTexts.contactsFooter}}
				{{#data.owner_contacts}}
					<span style="white-space: pre;"><b>{{name}}:</b> {{value}}</span>
				{{/data.owner_contacts}}
			{{/data.reportTexts.contactsFooter}}
		</td>
	</tr>
	<tr>
		<td class='logo'>
			{{{data.footer.logoPoweredBy}}}
		</td>

		<td class='page'>
			Strana <span class="pageNumber"></span> z <span class="totalPages"></span>
		</td>

		<td class='author'>
			{{@dict;Vystavil}}: {{data.author.fullName}}
		</td>
	</tr>
</table>