<style>
	table.footer{
		font-family: Arial, Helvetica, sans-serif;
		font-size: 6pt;
		width: 100%;
		margin-left: 1cm;
		margin-right: 1cm;
		border-collapse: collapse;
	}

	td.ownerInfo {text-align: left; line-height: 1.5;}
	td.author {text-align: right; vertical-align: bottom;}
	td.logo {text-align: left; width: 33.3%;}
	img.logo {height: 1.30em;  position: relative;}
	td.page {text-align: right; width: 33.3%;}
	td.isdocLogo {text-align: center; width: 33.3%;}
	img.isdoc {height: 1.30em;  position: relative;}


</style>


<table class='footer'>
	<tr>
		<td class="ownerInfo" colspan="2">
			{{#data.reportTexts.contactsFooter}}{{{data.reportTexts.contactsFooter}}}{{/data.reportTexts.contactsFooter}}
			{{^data.reportTexts.contactsFooter}}
				{{#data.owner_contacts}}
					<span style="white-space: pre;"><b>{{name}}:</b> {{value}}</span>
				{{/data.owner_contacts}}
			{{/data.reportTexts.contactsFooter}}
		</td>
		<td class="author">
			{{@dict;Vystavil}}: {{data.author.fullName}}
		</td>
	</tr>
	<tr>
		<td class='logo'>
			{{{data.footer.logoPoweredBy}}}
		</td>

		<td class="isdocLogo">
			{{{data.footer.logoEInvoice}}}
		</td>

		<td class='page'>
		{{@dict;Strana}} <span class="pageNumber"></span> {{@dict;z}} <span class="totalPages"></span>
		</td>
	</tr>
</table>
