<style>
	table.header {
		font-family: Arial, Helvetica, sans-serif;
		width: 100%;
		margin-left: 1cm;
		margin-right: 1cm;
	}

	td.docInfo {
		text-align: left;
		font-size: 12pt;
	}

	span.docName {
		text-transform: uppercase;
	}

	td.supplierLogo {
		text-align: right;
		font-size: 10pt;
		font-weight: bold;
	}
</style>

<table class='header'>
	<tr>
		<td class="docInfo">
			<span class='docName'>{{data.calcReport.title}}</span><br>
			<small><b>{{data.head.title}}</b> <small>{{data.person.fullName}}</small></small>
		</td>
		<td class="supplierLogo">
			{{#data.owner.logo.logo-nadpis.filename}}
				<img style="height:24pt;" src='{{{@imgData;dataItem:data.owner.logo.logo-nadpis}}}'>
			{{/data.owner.logo.logo-nadpis.filename}}
		</td>
	</tr>
</table>